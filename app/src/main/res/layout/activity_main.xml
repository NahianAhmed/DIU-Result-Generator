<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="shafi.mehedi.diuresultgenerator.MainActivity">

    <RelativeLayout
        android:layout_width="395dp"
        android:layout_height="587dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/relativeLayout"
            android:layout_marginTop="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/id_text"
                android:textSize="20sp"
                android:textStyle="normal"
                android:id="@+id/idText"
                android:layout_marginTop="10dp"/>

            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="20sp"
                android:layout_toRightOf="@id/idText"
                android:layout_marginLeft="20dp"
                android:hint="@string/id_hint"
                android:id="@+id/idInput"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/semester_range"
                android:layout_below="@id/idText"
                android:textSize="20sp"
                android:layout_marginTop="40dp"
                android:id="@+id/rangeText"/>

            <LinearLayout
                android:id="@+id/linearMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rangeText"
                android:orientation="vertical"
                android:layout_toRightOf="@id/idText">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="@string/from_text"
                        android:layout_marginTop="10dp"/>

                    <Spinner
                        android:id="@+id/spinnerFromYear"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/spinnerFromSemester"
                        android:layout_marginTop="10dp"></Spinner>


                </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="@string/to_text"
                    android:layout_marginTop="10dp"/>

                <Spinner
                    android:id="@+id/spinnerToYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="50dp"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/spinnerToSemester"
                    android:layout_marginTop="10dp"></Spinner>
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/generateResultButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/result_show_button"
                android:layout_centerHorizontal="true"
                android:textSize="15sp"
                android:layout_below="@id/linearMain"
                android:layout_marginTop="10dp"
                android:textStyle="normal"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Result"
                android:id="@+id/viewResult"
                android:layout_below="@id/generateResultButton"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/currentProcess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/generateResultButton"
                android:layout_alignBottom="@+id/generateResultButton"
                android:layout_centerHorizontal="true"
                android:text="@string/current_process" />

        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
